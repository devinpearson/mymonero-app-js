{
  "name": "MyMonero",
  "author": "MyMonero",
  "description": "The simplest way to use Monero",
  "version": "1.1.14",
  "license": "SEE LICENSE IN LICENSE.txt",
  "repository": "https://github.com/devinpearson/mymonero-app-js",
  "main": "./local_modules/electron_main/electron_main.js",
  "scripts": {
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "start": "electron ./local_modules/electron_main/electron_main.js",
    "dev": "NODE_ENV=development electron --no-sandbox ./local_modules/electron_main/electron_main.js",
    "postinstall": "electron-builder install-app-deps",
    "submodules": "git submodule update --init --recursive & git submodule foreach --recursive git fetch & git submodule foreach --recursive git checkout master & git submodule foreach --recursive git pull --ff-only origin master"
  },
  "build": {
    "appId": "com.mymonero.mymonero-desktop",
    "afterPack": "./build-afterPack.js",
    "afterSign": "./bin/notarize.js",
    "mac": {
      "category": "public.app-category.finance",
      "identity": "MyMonero Pty Ltd (NLN5D623Y3)",
      "target": [
        "dmg",
        "mas"
      ]
    },
    "win": {
      "certificateSubjectName": "MyMonero (PTY) LTD",
      "target": [
        "appx",
        "msi"
      ]
    },
    "nsis": {
      "perMachine": true
    },
    "linux": {
      "target": [
        "AppImage",
        "snap"
      ]
    },
    "protocols": [
      {
        "name": "Monero Funds Request URL",
        "schemes": [
          "monero"
        ]
      }
    ]
  },
  "engines": {
    "node": "12.4.0"
  },
  "dependencies": {
    "async": "3.1.0",
    "axios": "^0.19.2",
    "bitcoin-address-validation": "^1.0.2",
    "electron-context-menu": "0.15.1",
    "electron-log": "3.0.9",
    "electron-updater": "4.2.0",
    "fastclick": "1.0.6",
    "html5-fs": "0.1.1",
    "jsqr": "1.1.1",
    "qrcode": "1.2.2",
    "uuid": "3.3.2",
    "velocity-animate": "1.5.2",
    "xhr": "2.5.0"
  },
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-loader": "8.0.6",
    "babel-minify": "0.5.1",
    "electron": "^9.0.0",
    "electron-builder": "22.8.0",
    "electron-notarize": "^1.0.0",
    "eslint": "5.6.0",
    "request": "2.88.0",
    "webpack": "4.41.2",
    "webpack-cli": "3.3.10",
    "webpack-merge": "4.2.2",
    "worker-loader": "2.0.0"
  }
}
